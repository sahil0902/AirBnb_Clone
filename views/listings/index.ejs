<% layout("/layouts/boilerplate.ejs") -%>
   
    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            margin-left: 10rem;
            
        }
        .filter {
            text-align: center;
            margin-right: 1rem;
            margin-top: 2rem;
            opacity: 0.7;
        }
        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }
        .filter p {
            font-size: 0.8rem;
        }
        .tax-info {
            display: none;
        }
        .tax-toggles {
            border: 1px solid black;
            border-radius: 1rem;
            height: 3.25rem;
            padding: 1rem;
            margin-left: 2rem;
            display: flex;
            align-items: center;
        }

        @media (max-width: 768px) {
            #filters {
                margin-left: 0;
             
                white-space: nowrap;
            }
            .filter, .tax-toggles {
                display: inline-block;
            }
        }

        @media (max-width: 576px) {
            #filters {
                margin-left: 0;
               
                white-space: nowrap;
            }
            .filter, .tax-toggles {
                display: block;
                margin: 0 auto;
            }
        }
 
   </style>
