<% layout("/layouts/boilerplate.ejs") -%>

    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            margin-left: 10rem;

        }

        .filter {
            text-align: center;
            margin-right: 1rem;
            margin-top: 2rem;
            opacity: 0.7;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
        }

        .tax-info {
            display: none;
        }

        .tax-toggles {
            border: 1px solid black;
            border-radius: 1rem;
            height: 3.25rem;
            padding: 1rem;
            margin-left: 2rem;
            display: flex;
            align-items: center;
        }

        @media (max-width: 768px) {
            #filters {
                margin-left: 0;

                white-space: nowrap;
            }

            .filter,
            .tax-toggles {
                display: inline-block;
            }

            .custom-margin {
                margin-left: 10% !important;
            }
        }

        @media (max-width: 576px) {
            #filters {
                margin-left: 0;

                white-space: nowrap;
            }

            .filter,
            .tax-toggles {
                display: block;
                margin: 0 auto;
            }
        }

        @media (min-width: 992px) {

            /* Large screens (â‰¥992px) */
            .custom-margin {
                margin-left: 10rem !important;
            }
        }
    </style>
    <div id="filters">
        <div class="filter">
            <div> <i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic Cities</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-bed"></i></div>
            <p>Room</p>
        </div>

        <div class="filter">
            <div> <i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
        </div>

        <div class="filter">
            <div> <i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </div>
        <div class="filter">
            <div><i class="fa-regular fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Domes</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-ship"></i></div>
            <p>Arctic</p>
        </div>
        <div class="tax-toggles mt-2">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
            </div>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 row-cols-lg-4 g-4 mt-1 ms-3 me-3 custom-margin">
        <%for( let listing of allListing){%>

            <div class="card col listing-card " style="width: 20rem; ">

                <a href="/listings/<%=listing._id%>" class="lisiting-link">

                    <% if (listing.image && listing.image.length> 0) { %>
                        <img src="<%=listing.image[0].url%>" class="card-img-top image" alt="image of the house"
                            style="height: 20rem" />
                        <% } %>

                            <div class="card-body">
                                <p class="card-text"><b>
                                        <%=listing.title%>
                                    </b>
                                    <br>
                                    <% if (listing.price) { %>
                                        <%= Number(listing.price.replace(/[^0-9.-]+/g, '' )) .toLocaleString('en-GB', {
                                            style: 'currency' , currency: 'GBP' }) .replace('.00', '' ) %> / night
                                            <% } else { %>
                                                Price not available
                                                <% } %>
                                                    <i class="tax-info">&nbsp;&nbsp;+18% VAT</i>
                                </p>

                            </div>
                </a>
            </div>

            <%}%>
                <script src="js/filter.js"></script>
    </div>
   