    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1 row-cols-1 mt-3 text-center">
        <%for( let listing of allListing){%>
         
            <div class="card col listing-card " style="width: 20rem;">
                
                <a href="/listings/<%=listing._id%>" class="lisiting-link">
                
                <% if (listing.image && listing.image.length > 0) { %>
                    <img src="<%=listing.image[0].url%>" class="card-img-top image" alt="image of the house" style="height: 20rem" />
                <% } %>
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text"><b><%=listing.title%></b>
                <br>
                <%= Number(listing.price.replace(/[^0-9.-]+/g, ''))
                    .toLocaleString('en-GB', { style: 'currency', currency: 'GBP' })
                    .replace('.00', '') %> / night
                    <i class="tax-info">&nbsp;&nbsp;+18% VAT</i>
            </p>
                </div>
            </a>
              </div>
             
              <%}%>
    </div>
